<div class="edit-user-page">
  <h1 class="page-title">ユーザー情報編集</h1>

  <%= form_with(model: @user, local: true, class: "form-container") do |f| %>
    <div class="form-group">
      <%= f.label :username, "ユーザー名", class: "form-label" %>
      <%= f.text_field :username, required: true, class: "form-input", placeholder: "ユーザー名を入力してください" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, required: true, class: "form-input", placeholder: "例: example@example.com" %>
    </div>

    <div class="form-group">
      <%= f.label :user_experience_id, "経験", class: "form-label" %>
      <%= f.collection_select :user_experience_id, UserExperience.all, :id, :name, 
          { include_blank: "選択してください" }, 
          { class: "form-select" } %>
    </div>

    <div class="form-group">
      <%= f.label :affiliation, "所属", class: "form-label" %>
      <%= f.text_field :affiliation, class: "form-input", placeholder: "所属を入力してください (任意)" %>
    </div>

    <div class="form-group">
      <%= f.label :site_url, "サイトURL", class: "form-label" %>
      <%= f.url_field :site_url, class: "form-input", placeholder: "http://example.com" %>
    </div>

    <div class="form-group">
      <%= f.label :bio, "自己紹介", class: "form-label" %>
      <%= f.text_area :bio, class: "form-textarea", placeholder: "自己紹介を入力してください (任意)" %>
    </div>

    <div class="form-actions">
      <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
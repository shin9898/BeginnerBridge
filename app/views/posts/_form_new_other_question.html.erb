    <%= form_with model: @post_form, id: 'new_other_question_post', url: url, local: true do |f| %>
      <%= hidden_field_tag :post_type, 'other_question' %>
      <%= render 'shared/error_messages', model: f.object %>

        <!-- タイトル -->
        <div class="opinion-form-group">
          <%= f.label :title, "タイトル", class: "opinion-form-label" %>
          <%= f.text_field :title, class: "opinion-form-control", placeholder: "タイトルを入力してください" %>
        </div>

        <!-- 内容 -->
        <div class="opinion-form-group">
          <%= f.label :content, "内容", class: "opinion-form-label" %>
          <%= f.text_area :content, class: "opinion-form-control", placeholder: "内容を入力してください", rows: 8 %>
        </div>

        <%= f.hidden_field :post_category_id, value: 4 %>

        <!-- 送信ボタン -->
        <div class="opinion-form-group">
          <%= f.submit "投稿する", class: "opinion-btn" %>
        </div>
    <% end %>
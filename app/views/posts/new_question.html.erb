<%= render 'shared/header' %>

<div class="new-main">
  <div class="new-container">
    <h2 class="new-title">新しい質問を作成</h2>

    <!-- 質問の説明 -->
    <div class="post-description">
      <h4>質問の目的</h4>
      <p>このフォームでは、プログラミングやITに関する技術的な質問を投稿できます。具体的な問題やエラーの内容を記載してください。</p>
    </div>

    <%= form_with model: @post, local: true, html: { id: 'new_post' } do |f| %>
      <%= hidden_field_tag :post_type, 'question' %>
      <%= render 'shared/error_messages', model: f.object %>

      <!-- タイトル -->
      <div class="form-group">
        <%= f.label :title, "タイトル（必須）", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
      </div>

      <!-- 内容 -->
      <%= hidden_field_tag :post_category_id, 2 %>
      <div class="form-group">
        <%= f.label :content, "わからないことや発生している問題を教えてください（必須）", class: "form-label" %>
        <%= f.text_area :content, class: "form-control", placeholder: "内容を入力してください", rows: 8 %>
      </div>

      <!-- 実現したいこと -->
      <div class="form-group">
        <%= f.label :goal, "実現したいことを教えてください（必須）", class: "form-label" %>
        <%= f.text_area :goal, class: "form-control", placeholder: "具体的な目標を入力してください", rows: 4 %>
      </div>

      <!-- 試したこと・調べたこと -->
      <div class="form-group">
        <%= f.label :attempts, "試したこと・調べたことを教えてください（必須）", class: "form-label" %>
        <%= f.text_area :attempts, class: "form-control", placeholder: "試したこと・調べたことを記載してください", rows: 4 %>
      </div>

      <!-- 該当ソースコード -->
      <div class="form-group">
        <%= f.label :source_code, "該当のソースコードをコピーアンドペーストしてください（任意）", class: "form-label" %>
        <%= f.text_area :source_code, class: "form-control", placeholder: "ソースコードを記載してください", rows: 8 %>
      </div>

      <!-- 参考画像 -->
      <div class="form-group">
        <%= f.label :image, "参考画像（任意）", class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
          <div id="previews"></div>
      </div>

      <%= f.hidden_field :post_category_id, value: 2 %>

      <!-- 送信ボタン -->
      <div class="form-group">
        <%= f.submit "投稿する", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
<%= render 'shared/footer' %>
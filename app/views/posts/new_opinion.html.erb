<%= render 'shared/header' %>

<div class="new-main">
  <div class="new-container">
    <h2 class="new-title">意見交換を投稿する</h2>

    <!-- 意見交換の説明 -->
    <div class="post-description">
      <h4>意見交換の目的</h4>
      <p>このフォームでは、プログラミングやITに関するテーマについて意見を交換したい場合に投稿できます。</p>
    </div>

    <%= form_with model: @post, url: posts_path, local: true do |f| %>
      <%= hidden_field_tag :post_type, 'opinion' %>
      <%= render 'shared/error_messages', model: f.object %>

      <!-- タイトル -->
      <div class="form-group">
        <%= f.label :title, "タイトル", class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
      </div>

      <!-- 内容 -->
      <div class="form-group">
        <%= f.label :content, "内容", class: "form-label" %>
        <%= f.text_area :content, class: "form-control", placeholder: "内容を入力してください", rows: 8 %>
      </div>

      <%= f.hidden_field :post_category_id, value: 3 %>

      <!-- 送信ボタン -->
      <div class="form-group">
        <%= f.submit "投稿する", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
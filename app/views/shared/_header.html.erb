<header>
  <nav class="navbar">
    <div class="container">
      <h1 class="navbar-brand">
        <%= link_to "#", root_path, class: "brand-logo" %>
      </h1>
      <div class="navbar-items">
        <% if user_signed_in? %>
          <!-- ログイン時の表示 -->
          <span class="navbar-item">ようこそ、<%= current_user.username %> さん</span>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-logout" %>
        <% else %>
          <!-- 未ログイン時の表示 -->
          <%= link_to "新規登録", new_user_registration_path, class: "btn btn-register" %>
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-login" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
